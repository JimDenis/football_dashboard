<html>
<head>

    {{> header}}

</head>

<body>

  <h1>Edit Player</h1>

  <div class="container">

     {{> menu}}
  
  <form action='/users/edit-players' method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Player Active</label>
    <input type="text" name="PlayerActive" value={{player_active}} class="form-control" placeholder="Player Active ??">
  </div>

  <div class="form-group">
    <label for="exampleInputPassword1">First Name</label>
    <input type="text" name="FirstName" value={{player_first_name}} class="form-control" placeholder="Enter First Name">
  </div>

  <div class="form-group">
    <label for="exampleInputPassword1">Last Name</label>
    <input type="text" name="LastName" value={{player_last_name}} class="form-control">
  </div>

  <input type="hidden" name="playerId" value="{{id}}" >

  <button type="submit" class="btn btn-primary">Submit</button>
 

</form>

</div>

  {{> scripts}}
  
</body>
</html>
